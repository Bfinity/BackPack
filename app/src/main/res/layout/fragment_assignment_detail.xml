<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_assignment_title"
        android:textSize="@dimen/text_view_size"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_assignment_assgn_date"
        android:textSize="@dimen/text_view_size"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_assignment_due_date"
        android:textSize="@dimen/text_view_size"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/detail_assignment_details"
        android:textSize="@dimen/text_view_size"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    <TextView
        android:id="@+id/detail_assignment_state"
        android:textSize="@dimen/text_view_size"
        android:layout_margin="@dimen/text_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Not Done"
        android:id="@+id/checkBox_state"/>

</LinearLayout>